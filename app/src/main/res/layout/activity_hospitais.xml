<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_login"
    tools:context=".HospitaisActivity" >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>



    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioButtonGuarda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:text="@string/hospital_sousa_martins_guarda" />

        <RadioButton
            android:id="@+id/radioButtonLisboa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:text="@string/hospital_de_santa_maria_lisboa" />

        <RadioButton
            android:id="@+id/radioButtonPorto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:text="@string/hospital_de_sao_joao_porto" />

        <RadioButton
            android:id="@+id/radioButtonFaro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"

            android:text="@string/hospital_de_faro" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonConfirmarRegisto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/custom_button_blue"
        android:layout_margin="8dp"
        android:text="@string/confirmar_registo" />
</LinearLayout>